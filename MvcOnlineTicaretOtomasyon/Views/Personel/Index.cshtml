@using MvcOnlineTicaretOtomasyon.Models.Sınıflar
@model List<Personel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px">
    <tr>
        <th>Id</th>
        <th>Personel Adı</th>
        <th>Soyad</th>
        <th>Görsel</th>
        <th>Departman</th>
        <th>Güncelle</th>
        <th>Satışlar</th>
    </tr>
    @foreach (var k in Model)
    {
        <tr>
            <td>@k.PersonelId</td>
            <td>@k.PersonelAd</td>
            <td>@k.PersonelSoyad</td>
            <td>@k.PersonelGorsel</td>
            <td>@k.Departman.DepartmanAd</td>
            <td><a href="/Departman/departmanGuncelle/@k.PersonelId" class="btn btn-warning">GÜNCELLE</a></td>
            <td><a href="/Departman/departmanPersonelSatis/@k.PersonelId" class="btn btn-group" style="background-color:cadetblue;color:white">DETAY</a></td>
        </tr>

    }
</table>
<a href="/Personel/personelEkle" class="btn btn-info">Personel Ekle</a>


