@using MvcOnlineTicaretOtomasyon.Models.Sınıflar
@model List<Faturalar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px">
    <tr>
        <th>Id</th>
        <th>Seri No</th>
        <th>Sıra No</th>
        <th>Vergi Dairesi</th>
        <th>Tarih</th>
        <th>Saat</th>
        <th>Toplam</th>
        <th>Teslim Eden</th>
        <th>Teslim Alan</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var k in Model)
    {

        <tr>
            <td>@k.FaturaId</td>
            <td>@k.FaturaSerino</td>
            <td>@k.FaturaSırano</td>
            <td>@k.VergiDairesi</td>
            <td>@k.Tarih</td>
            <td>@k.Saat</td>
            <td>100</td>
            <td>@k.TeslimEden</td>
            <td>@k.TeslimAlan</td>
            <td><a href="/Faturalar/faturaGetir/@k.FaturaId" class="btn btn-warning">GÜNCELLE</a></td>
            <td><a href="/Faturalar/faturaDetay/@k.FaturaId" class="btn btn-group" style="background-color:cadetblue;color:white">DETAY</a></td>
        </tr>

    }
</table>
<a href="/Faturalar/faturaEkle" class="btn btn-info">Yeni Fatura Girişi</a>

