@using MvcOnlineTicaretOtomasyon.Models.Sınıflar
@model List<Personel>
@{
    ViewBag.Title = "departmanDetay";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Departman Detay Sayfası</h2>
<br />

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Departman Adı: @ViewBag.d</li>
</ol>

<table class="table table-hover">
    <tr>
        <th>Personel Id</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Görsel</th>
        <th>Satışlar</th>
    </tr>
    @foreach (var x in Model)
    {
    <tr>
        <td>@x.PersonelId</td>
        <td>@x.PersonelAd</td>
        <td>@x.PersonelSoyad</td>
        <td>@x.PersonelGorsel</td>
        <td><a href="/Departman/departmanPersonelSatis/@x.PersonelId" class="btn btn-default" style="background-color:darkseagreen   ">Satışlar</a></td>
    </tr>
    }
</table>
